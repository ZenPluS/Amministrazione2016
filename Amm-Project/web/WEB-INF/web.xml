<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Registra</servlet-name>
        <servlet-class>amm.progetto.Servlet.Registra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>amm.progetto.Servlet.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cliente</servlet-name>
        <servlet-class>amm.progetto.Servlet.Cliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Venditore</servlet-name>
        <servlet-class>amm.progetto.Servlet.Venditore</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registra</servlet-name>
        <url-pattern>/Registra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cliente</servlet-name>
        <url-pattern>/Cliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Venditore</servlet-name>
        <url-pattern>/Venditore</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
           descrizione.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
